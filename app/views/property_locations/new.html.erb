<% provide(:title, "Add Property Location") %>
<h1>Add Property Location</h1>
<div class="row">
	<div class="span3 offset4">
		<%= form_for(@location) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :Area %>
			<%= f.text_field :area %>

			<%= f.label "Select City" %>
			<%= select :property_location, :city, PropertyLocationConstraint.city_types.to_a %>

			<%= f.label :State %>
			<%= select :property_location, :state, PropertyLocationConstraint.state_types.to_a %>

			<%= f.label :Country %>
			<%= select :property_location, :country, PropertyLocationConstraint.country_types.to_a %>

			<%= f.submit PropertyLocationConstraint.SUBMIT_BUTTON, class: "btn btn-primary" %>
			<% end %>
	</div>
</div>

