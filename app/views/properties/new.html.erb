<% provide(:title, 'Add New Property') %>
<% provide(:dashboard, true) %>
<h1>Add New Property</h1>

	<%= form_for @property, html: { role: "form" } do |f| %>
		<%= render 'shared/error_messages' %>

		<div class="form-group">
			<%= f.label	:type %>
			<%= select :property, :property_type, PropertyConstraint.property_types.to_a, { }, { :class => 'form-control'}%>
		</div>

		<div class="form-group">
			<%= f.label	:rent %>
			<%= f.text_field :rent, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label	:deposit %>
			<%= f.text_field :deposit, class: "form-control" %>
		</div>

		<div class="form-group">	
			<%= f.label	:furnishing %>
			<%= select :property, :furnishing, PropertyConstraint.furnishing_types.to_a, { }, { :class => 'form-control'} %>
		</div>

		<div class="form-group">
			<%= f.label	:lease_type %>
			<%= select :property, :lease_type, PropertyConstraint.lease_types.to_a, { }, { :class => 'form-control'} %>	
		</div>

		<div class="form-group">
			<%= f.label	:build_area %>
			<%= f.text_field :build_area, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :power_backup %>
			<%= select :property, :power_backup, PropertyConstraint.powerbackup_types.to_a, { }, { :class => 'form-control'} %>
		</div>

		<div class="form-group">
			<%= f.label :Secuity %>
			<%= select :property, :security, PropertyConstraint.security_types.to_a, { }, { :class => 'form-control'} %>
		</div>

		<div class="form-group">
			<%= f.label :Occupant %>
			<%= select :property, :occupant, PropertyConstraint.occupant_types, { }, { :class => 'form-control'} %>
		</div>

		<div class="form-group">
			<%= f.label :Facing %>
			<%= select :property, :facing, PropertyConstraint.facing_types, { }, { :class => 'form-control'} %>
		</div>

		<div class="form-group">
			<%= f.label :water_supply %>
			<%= select :property, :water_supply, PropertyConstraint.water_supply_types, { }, { :class => 'form-control'} %>
		</div>

		<div class="form-group">
			<%= f.label	:available_from %>
			<%= f.date_select :available_from %>
		</div>

			<div class="form-group">
				<%= f.fields_for :photos do |p| %>
		   		<%= p.label :photo %><br>
		   		<%= p.file_field :photo, :multiple => true, name: "photos[photo][]" %>
		 	</div>

	<% end %>
			
			<%= f.submit "Add Property", class: "btn btn-primary" %>
<% end %>